<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"

            android:orientation="vertical">
            <TextView
                android:id="@+id/Name."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:text="NAME"
                android:textSize="40dp" />
            <TextView
                android:id="@+id/email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:text="Email"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/phoneno."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:text="phone_no"
                android:textSize="40dp" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/choose_crop_details"
        android:text="Choose photo"
        android:background="#32CD32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        />
        <EditText
            android:id="@+id/Crop_name_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
          android:hint="Crop Name"
            />
        <EditText
            android:id="@+id/start_date_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
           android:hint="Start Date"
            />
        <EditText
            android:id="@+id/end_date_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="End Date"
            />
        <ImageView
            android:id="@+id/image_upload_display"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            />
    </LinearLayout>

    <Button
        android:id="@+id/upload_crop_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:background="#32CD32"
        android:text="Upload" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_crops_view_recycler"
        >
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
</ScrollView>